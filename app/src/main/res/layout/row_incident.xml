<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:elevation="@dimen/_10sdp"
    app:cardCornerRadius="@dimen/_10sdp"
    android:padding="@dimen/_5sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="@dimen/_5sdp"
        android:layout_height="wrap_content">

        <!-- fire incident image gallery -->
        <com.github.florent37.materialleanback.MaterialLeanBack
            android:id="@+id/mlbImages"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            app:mlb_animateCards="true"
            app:mlb_cardElevationEnlarged="10"
            app:mlb_cardElevationReduced="5">

        </com.github.florent37.materialleanback.MaterialLeanBack>

        <!-- incident reporter profile picture -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civReporterImage"
            android:layout_width="@dimen/_50sdp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/mlbImages"
            android:layout_height="@dimen/_50sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mlbImages"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_toRightOf="@id/civReporterImage"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDescription"
                android:text="@string/app_name"
                android:textColor="@android:color/black"
                android:layout_width="match_parent"
                fontPath="fonts/Roboto-Medium.ttf"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvLocation"
                android:text="@string/app_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/reported_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvReportedBy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"/>
        </LinearLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>